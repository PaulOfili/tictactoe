{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "quotes": ["error", "double"],
        "indent": ["error", 4],
        "linebreak-style": 0,
        "no-plusplus": 0,
        "class-methods-use-this": 0
    },
    "overrides": [
        {
          "files": ["*.test.js","*.spec.js"],
          "rules": {
            "no-unused-vars": 0,
            "no-undef": 0
          }
        }
      ]
}
